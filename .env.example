# YouTube Repurposer API Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Gemini AI API Key (REQUIRED for content generation)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Application settings
APP_NAME="YouTube Repurposer API"
APP_VERSION="1.0.0"

# Server settings
HOST=127.0.0.1
PORT=8002
DEBUG=true
RELOAD=true

# Logging
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (default for development)
DATABASE_URL=sqlite:///./yt_repurposer.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/repurposer

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Gemini API Configuration
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta

# OpenAI API (alternative to Gemini - optional)
# OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# CONTENT GENERATION SETTINGS
# =============================================================================

# Content generation limits
MAX_CONTENT_PIECES=10
MAX_TRANSCRIPT_LENGTH=100000
DEFAULT_TIMEOUT=300

# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limits
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins (comma-separated)
# For development: use * to allow all origins
# For production: specify your frontend domains
ALLOWED_ORIGINS=*

# For production, specify exact origins:
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for sessions (generate a random string for production)
# SECRET_KEY=your-secret-key-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development flags
# ENABLE_DOCS=true
# ENABLE_REDOC=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Uncomment for production deployment
# DEBUG=false
# RELOAD=false
# LOG_LEVEL=WARNING
# ALLOWED_ORIGINS=https://yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Uncomment if using monitoring services
# SENTRY_DSN=your_sentry_dsn_here
# ANALYTICS_API_KEY=your_analytics_key_here

# =============================================================================
# CACHE CONFIGURATION (Optional)
# =============================================================================

# Redis cache (optional, for improved performance)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# =============================================================================
# BACKUP & STORAGE (Optional)
# =============================================================================

# File storage settings
# UPLOAD_PATH=./uploads
# MAX_FILE_SIZE=10485760  # 10MB

# Cloud storage (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1